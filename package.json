{
  "name": "keep-sfw-bot",
  "version": "1.0.0",
  "description": "a telegram bot to keep your group suitable for work",
  "main": "index.js",
  "repository": "https://github.com/nacht42/keep-sfw-bot",
  "author": "Nacht <nacht42@riseup.net>",
  "license": "MIT",
  "devDependencies": {
    "@types/concurrently": "^5.2.1",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "telegraf": "https://github.com/telegraf/telegraf#a13461e",
    "winston": "^3.3.3"
  },
  "scripts": {
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "build": "yarn build-ts && yarn lint",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "start": "node dist/index.js"
  }
}
